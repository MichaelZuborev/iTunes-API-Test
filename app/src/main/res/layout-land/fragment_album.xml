<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="8dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/albumPic_page"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:paddingLeft="8dp"
            android:src="@drawable/test_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/albumTitle_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Album Title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/albumAuthor_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Album Author"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/albumGenreAndYear_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="genre year"
                android:textColor="@color/lightText" />


            <TextView
                android:id="@+id/albumSongsQuantity_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Songs quantity"
                android:textColor="@color/lightText" />

            <TextView
                android:id="@+id/albumPrice_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Album Price"
                android:textColor="@color/lightText" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/albumSongsList_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"></ListView>
    </LinearLayout>

</LinearLayout>